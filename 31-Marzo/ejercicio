import requests


if __name__ == '__main__':

    archivo = open("ejercicio.csv", "w")
    nombres_columnas = "id , nombre , latitud , longitud \n"
    archivo.write(nombres_columnas)
    archivo.close()
    
    for i in range(30):
        respuesta = requests.get('https://apis.datos.gob.ar/georef/api/provincias?id=' + i)
        respuesta.status_code
        informacion = respuesta.json()
        id = informacion["id"]
        nombre = informacion["nombre"]
        latitud = informacion["centroide.lat"]
        longitud = informacion["centroide.lon"]

        linea = id + "," + nombre + "\n" + latitud + "\n" + longitud + "\n"

        archivo = open("ejercicio.csv", "a")
        archivo.write(linea)
        archivo.close()